[Unit]
Description=Harmony Service
Wants=network.target network-online.target
After=network.target network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/do-user
ExecStart=bash /root/do-user/node.sh -1 -S -p /root/do-user/bls.pass -k /root/do-user/bls.key -P
Restart=always

[Install]
WantedBy=multi-user.target 